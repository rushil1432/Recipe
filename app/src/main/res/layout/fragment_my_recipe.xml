<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.MyRecipeFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_myrecipes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/linearlayout_Progessbar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">
        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:indeterminateDrawable="@drawable/custom_progress_bar"
            />

        <TextView
            android:id="@+id/txtProgressText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progressBar"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Loading..."
            android:fontFamily="@font/raleway"
            android:textColor="@color/colorGrayDark"
            android:textStyle="bold"
            android:layout_marginTop="2dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_nodata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ic_wedding_dinner" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="No Recipe Found"
            android:fontFamily="@font/raleway_semibold"
            android:textColor="@color/colorGrayDark"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:fontFamily="@font/raleway"
            android:text="We can't find any recipe matching your search"
            android:textColor="@color/colorGrayDark" />


    </LinearLayout>

</FrameLayout>